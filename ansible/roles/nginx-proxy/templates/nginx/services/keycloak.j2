server {

	server_name auth.{{ basedomain.domain }};

	location / {
		proxy_pass https://172.22.0.2:8443; # static ip address set in keycloak's docker-compose file
	        proxy_set_header Host $host;
	        proxy_set_header X-Real-IP $remote_addr;
	        proxy_set_header X-Forwarded-Proto $scheme;
	        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	}


    listen [::]:443 ssl; 
    listen 443 ssl;


}
